	<style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<!-- ToolBarのタイトルテキスト色 -->
		<item name="android:textColorPrimary">@android:color/white</item>
		<!-- ToolBarのオプションメニューのOverflowアイコンとメニューボタンの色 -->
		<item name="android:textColorSecondary">@android:color/white</item>
		<item name="windowActionModeOverlay">true</item>
		<item name="android:windowBackground">@null</item>
	</style>

	<style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
		<item name="android:windowMinWidthMajor">@dimen/dialog_min_width_major</item> 		<!--最大のサイズ-->
		<item name="android:windowMinWidthMinor">@dimen/dialog_min_width_minor</item> 		<!--最小のサイズ-->
	</style>

	<style name="SplashDialogStyle" parent="Theme.AppCompat.Light.Dialog">
		<item name="android:windowMinWidthMajor">@dimen/splash_min_width_major</item> 		<!--最大のサイズ-->
		<item name="android:windowMinWidthMinor">@dimen/splash_min_width_minor</item> 		<!--最小のサイズ-->
	</style>

	<style name="ToolbarMenu" parent="@style/Widget.AppCompat.Toolbar">
		<item name="android:theme">@style/ToolbarTheme</item>
	</style>

	<style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="android:textColorPrimary">@android:color/black</item>
		<item name="android:textColorSecondary">@android:color/primary_text_light</item>
	</style>

	<style
		name="AppTheme.AppBarOverlay"
		parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

	<style
		name="AppTheme.PopupOverlay"
		parent="ThemeOverlay.AppCompat.Light"/>

	<style name="SplashTheme" parent="AppTheme">
		<item name="android:windowBackground">@drawable/splash</item>
	</style>

</resources>
