<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".MainActivity">

	<LinearLayout
		android:id="@+id/scam_ll"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:orientation="vertical">

		<com.journeyapps.barcodescanner.DecoratedBarcodeView
			android:id="@+id/decoratedBarcodeView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="8dp"
			android:layout_weight="8"
			android:padding="8dp"
			app:layout_constraintBottom_toTopOf="@+id/release_bt"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent">

		</com.journeyapps.barcodescanner.DecoratedBarcodeView>

		<ImageButton
			android:id="@+id/release_bt"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:srcCompat="@android:drawable/ic_menu_camera"/>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/prevew_ll"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<!--<ImageView-->
		<!--android:id="@+id/preveiw_iv"-->
		<!--android:layout_width="match_parent"-->
		<!--android:layout_height="wrap_content"-->
		<!--android:layout_weight="1"-->
		<!--app:srcCompat="@android:drawable/ic_menu_report_image"/>-->

		<Button
			android:id="@+id/acsess_bt"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="Button"/>

		<Button
			android:id="@+id/rescan_bt"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="bottom|right"
			android:text="@string/btf_re_scan"/>
	</LinearLayout>

</LinearLayout>